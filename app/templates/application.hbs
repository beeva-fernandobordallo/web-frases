<!-- Modal Trigger -->

  <!-- Modal Structure -->
  <div id="modalNuevaEntrada" class="modal modalNuevaEntrada">
    <div class="modal-content">
      <h4><i class="material-icons">add</i> Compartir </h4>
      <br>
      <p>
        <form>
          <div class="input-field col s6">
          {{input placeholder="Escribe aquí tu frase" id="dicho" type="text" class="validate" autofocus="true" value=model.frase}}
          <label for="dicho">Dicho familiar</label>

          <div class="input-field col s4">
          {{input placeholder="Autor" id="autor" type="text" class="validate" value=model.author}}
        </div>
        </div>
        </form>
      </p>
    </div>
    <div class="modal-footer">
      <a class="waves-effect waves-green btn-flat green lighten-2 hoverable" {{action 'sendNewEntry'}}>¡Enviar!</a>
      <a class="waves-effect waves-red btn-flat" {{action 'closeNewEntryModal'}}>Salir</a>
    </div>
  </div>


